<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="#BAD7DF"

    android:layout_height="match_parent"
    tools:context=".DarkPage.writeDiaryActivity">
    <Button
        android:id="@+id/btn_write_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SAVE"

        />
    <EditText

        android:id="@+id/editxt_subDiary"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#8DB1D8"
        android:hint="What is special today... tell me.."
        android:textStyle="italic"

        />


    <EditText
        android:gravity="start"
        android:id="@+id/editxt_diary"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="#8DB1D8"
        android:hint="What's Happend today.."
        android:scrollbars="vertical"
        android:cursorVisible="true"
        android:inputType="textMultiLine"
        android:textAlignment="textStart" />

</LinearLayout>